<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav.xml"
    app:startDestination="@id/contactsFragment">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="pt.ipbeja.chatapp.ContactsFragment"
        android:label="fragment_contacts"
        tools:layout="@layout/fragment_contacts" >
        <action
            android:id="@+id/action_contactsFragment_to_createContactFragment"
            app:destination="@id/createContactFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/createContactFragment"
        android:name="pt.ipbeja.chatapp.CreateContactFragment"
        android:label="create_contact_fragment"
        tools:layout="@layout/create_contact_fragment" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="pt.ipbeja.chatapp.ChatFragment"
        android:label="chat_fragment"
        tools:layout="@layout/chat_fragment" >
        <argument
            android:name="contactId"
            app:argType="long" />
    </fragment>
</navigation>